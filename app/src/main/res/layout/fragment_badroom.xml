<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ECFFFF">

        <TextView
            android:id="@+id/badroom_comp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="教育部第16屆數位信號處理創思設計競賽"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/badroom_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="基於物聯網(IOT)之居家⻑照與數據整合之應⽤"
            android:textSize="16sp" />



        <ScrollView
            android:layout_marginTop="50dp"
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/badroomdeal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#C4E1FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/temperaturw_deal"
                            />
                        <TextView
                            android:id="@+id/bad_temp1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"

                            android:text="溫度："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/bad_temp_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/bad_temp2"
                                android:textSize="40sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/bad_temp2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="  度"
                                android:textSize="30sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#C4E1FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/humiditydeal"
                            />
                        <TextView
                            android:id="@+id/bad_hum1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"

                            android:text="濕度："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/bad_hum_result2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="70"
                                android:layout_toLeftOf="@+id/bad_hum3"
                                android:textSize="40sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/bad_hum3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="  %"
                                android:textSize="30sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#C4E1FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/fireicon"
                            />
                        <TextView
                            android:id="@+id/bad_mq2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"

                            android:text="煙霧 :"
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/bad_mq2_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="70"
                                android:layout_toLeftOf="@+id/bad_mq23"
                                android:textSize="40sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/bad_mq23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="     "
                                android:textSize="30sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#C4E1FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/earthquakedeal"
                            />
                        <TextView
                            android:id="@+id/bad_Earthquake"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"

                            android:text="地震警戒："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/bad_Earthquake_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="0"
                                android:layout_toLeftOf="@+id/bad_Earthquake23"
                                android:textSize="40sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/bad_Earthquake23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="     "
                                android:textSize="30sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#46A3FF">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:text="臥室Badroom"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    >

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>






    </LinearLayout>
</RelativeLayout>