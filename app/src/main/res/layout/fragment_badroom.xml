<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFED97">

        <TextView
            android:id="@+id/badroom_comp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="教育部第16屆數位信號處理創思設計競賽"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/badroom_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="基於物聯網(IOT)之居家⻑照與數據整合之應⽤"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/badroom_imgview"
                android:layout_width="360dp"
                android:layout_height="500dp"
                android:src="@drawable/badroomdeal"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/temperaturw_deal"
                />
            <TextView
                android:id="@+id/bad_temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"

                android:text="溫度："
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_temp_result"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="100"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="度"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/humiditydeal"
                />
            <TextView
                android:id="@+id/bad_hum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"

                android:text="濕度："
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_hum_result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="68"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_hum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="%"
                android:textSize="18sp" />


        </LinearLayout>
        '<LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mq2deal"
            />
        <TextView
            android:id="@+id/bad_mq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"

            android:text="煙霧(MQ2)："
            android:textSize="18sp" />
        <TextView
            android:id="@+id/bad_mq2_result"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="left"
            android:text="100"
            android:textSize="18sp" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/earthquakedeal"
                />
            <TextView
                android:id="@+id/bad_Earthquake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"

                android:text="地震警戒："
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_Earthquake_result"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="100"
                android:textSize="18sp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>