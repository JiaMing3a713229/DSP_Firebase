<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F0F0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_comp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="教育部第16屆數位信號處理創思設計競賽"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/home_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="基於物聯網(IOT)之居家⻑照與數據整合之應⽤"
            android:textSize="16sp" />

        <ScrollView
            android:layout_marginTop="50dp"
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/living2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/temperaturw_deal"
                            />
                        <TextView
                            android:id="@+id/home_temp1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"
                            android:textColor="@color/black"
                            android:text="溫度："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/home_temp_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/home_temp2"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/home_temp2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="  度"
                                android:textSize="30sp"
                                android:textColor="@color/black"/>
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/humiditydeal"
                            />
                        <TextView
                            android:id="@+id/home_hum1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"
                            android:textColor="@color/black"
                            android:text="濕度："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/home_hum_result2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/home_hum3"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/home_hum3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="   %"
                                android:textSize="30sp"
                                android:textColor="@color/black"/>
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/pm25deal"
                            />
                        <TextView
                            android:id="@+id/home_pm25"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"
                            android:textColor="@color/black"
                            android:text="PM2.5："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/home_pm25_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/home_ppm"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/home_ppm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="   ppm"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/earthquakedeal"
                            />
                        <TextView
                            android:id="@+id/home_earthquake"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"
                            android:textColor="@color/black"
                            android:text="地震警戒："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/home_earthquake_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/home_earthquake23"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/home_earthquake23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="       "
                                android:textSize="25sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/home_Crutch"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="@color/black"
                                android:text="拐杖資訊"
                                android:textSize="28sp"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/curth"
                            />
                        <TextView
                            android:id="@+id/home_Crutch_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"
                            android:textColor="@color/black"
                            android:text="警戒距離："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/home_Crutch_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/home_Crutch23"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/home_Crutch23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="       "
                                android:textSize="25sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/home_Watch"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="@color/black"
                                android:text="手環資訊"
                                android:textSize="28sp"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#ECF5FF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/heart"
                            />
                        <TextView
                            android:id="@+id/home_Watch_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/noto_sans"
                            android:textColor="@color/black"
                            android:text="心跳指數："
                            android:textSize="28sp" />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/home_watch_result"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="100"
                                android:layout_toLeftOf="@+id/home_Watch23"
                                android:textSize="35sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/home_Watch23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/noto_sans"
                                android:text="       "
                                android:textSize="25sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FFE6D9">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:text="客廳Living room"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    >

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>















    </LinearLayout>
</RelativeLayout>