<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2AFF9800"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kitchen_comp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="比賽名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kitchen_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="隊伍名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kitchen_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="作品名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/kitchen_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="組員:"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/kitchen_imgview"
                android:layout_width="360dp"
                android:layout_height="470dp"
                android:src="@drawable/kitchendeal"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/temperaturw_deal"
                />
            <TextView
                android:id="@+id/kitchen_temp1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/noto_sans"

                android:text="目前溫度:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kitchen_temp_result"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="100"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kitchen_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="度"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/humiditydeal"
                >

            </ImageView>
            <TextView
                android:id="@+id/kitchen_hum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"

                android:text="目前濕度:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kitchen_hum_result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="68"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/kitchen_hum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="%"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>